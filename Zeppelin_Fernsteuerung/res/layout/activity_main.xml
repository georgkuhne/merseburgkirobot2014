<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.home.zeppelin_fernsteuerung.MainActivity"
    tools:ignore="MergeRootFrame" >

    
    

    <android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_width="700px"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
	</android.support.v4.view.ViewPager>
	
        
    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/image_button_bg" >
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tVHeckrotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_runter"
        android:layout_marginLeft="150px"
        android:text="Heckrotor" />
    
    <TextView
        android:id="@+id/tVHauptrotoren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_runter2"
        android:layout_toRightOf="@+id/tVHeckrotor"
        android:layout_marginLeft="50px"
        android:text="Hauptrotoren" />

    
    

    </RelativeLayout>